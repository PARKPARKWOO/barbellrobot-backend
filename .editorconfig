root = true

[*]
charset = utf-8

[*.{java,kt,kts,scala,rs,xml,kt.spec,kts.spec}]
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt, kts}]
ij_any_blank_lines_before_method_body = 1
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true
indent_size = 4
ktlint_code_style = ktlint_official
ktlint_standard_argument-list-wrapping = disabled
ktlint_standard_blank-line-before-declaration = true
ktlint_standard_filename = disabled
ktlint_standard_function-signature = disabled
ktlint_standard_max-line-length = disabled # Detekt의 MaxLineLength rule을 사용
ktlint_standard_multiline-expression-wrapping = disabled # A multiline expression should start on a new line
ktlint_standard_no-blank-line-in-list = disabled # Unexpected blank line(s) in value parameter list
ktlint_standard_package-name = disabled # Package name contains a disallowed character (`in`)
ktlint_standard_parameter-list-wrapping = disabled
ktlint_standard_string-template-indent = disabled

[*.{yml,yaml}]
indent_size = 2